                            if (jqXHR.status == 404) {
                                // User not found. Show an error message.
                                alert(jqXHR.responseJSON.message);
                            } else {
                                // Some other error occurred.
                                console.log("Error: " + jqXHR.status);
                            }
                        });
                }
            })
        }
    </script>
}