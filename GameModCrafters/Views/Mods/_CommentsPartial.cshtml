@model ModDetailViewModel

@if (Model.Comments.Count == 0)
{
    <div class="message">
        <div style="text-align:center;">
            暫無留言
        </div>
    </div>
}
else
{
    foreach (var comment in Model.Comments)
    {
        <div class="message">
            <div>
                @comment.UserName @(Model.AuthorName == comment.UserName ? @Html.Raw("<span class='author-tag'>作者</span>") : ""): @comment.CommentContent
            </div>
            @if (User.Identity.Name == comment.UserName)
            {
                <button class="delete-button btn btn-danger" style="display: none;" data-comment-id="@comment.CommentId">刪除</button>
            }
        </div>
    }
}
