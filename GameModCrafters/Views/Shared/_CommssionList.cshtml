
@model List<CommissionViewModel>;

<div class="row align-items-start">
    <div class="col GameName">
        遊戲
    </div>
    <div class="col-6 title">
        Title
    </div>
    <div class="col SendernName">
        發文人
    </div>
    <div class="col SenderDate">
        發文日
    </div>
    <div class="col LastReply">
        最後回覆
    </div>
    <div class="col CommisionStatus">
        委託狀態
    </div>
</div>
@foreach (var item in Model)
{
    <div class="row align-items-start">
        <div class="col GameName">
            <a href="@Url.Action("Details", "Games", new { id = item.GameID })">
                @item.GameName
            </a>
        </div>

        @{
            if (item.Status == "待接受")
            {
                <div class="col-6 title">
                    <a href="@Url.Action("Edit", "Commissions", new { id = item.CommissionId })">
                        @item.CommissionTitle
                    </a>
                </div>
            }

            if (item.Status == "進行中")
            {
                <div class="col-6 title">
                    <a href="@Url.Action("GotoTransactionDetails", "Commissions", new { id = item.CommissionId })">
                        @item.CommissionTitle
                    </a>
                </div>
            }

            if (item.Status == "已完成")
            {
                <div class="col-6 title">
                    <a href="@Url.Action("FinishCommission", "Commissions", new { id = item.CommissionId })">
                        @item.CommissionTitle
                    </a>
                </div>
            }
        }

        <div class="col SendernName">
            @item.DelegatorName
        </div>
        <div class="col SenderDate">
            @item.CreateTime
        </div>
        <div class="col LastReply">
            @item.UpdateTime
        </div>
        <div class="col CommssionStatus">
            @item.Status
        </div>
    </div>
}
