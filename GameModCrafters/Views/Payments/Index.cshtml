
@{
    ViewData["Title"] = "Index";
}

<div class="container payments my-4">
    <div class="row my-5">
        <div class="col-1"></div>
        <div class="col-4 square" id="storedValueBtn">
            <a href="@Url.Action("StoredValue", "Payments")">
                <div class="content">
                    <h3>儲值</h3>
                    <p>獲得Mod Coin</p>
                </div>
            </a>
        </div>
