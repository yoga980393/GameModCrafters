@model LoginViewModel

<div class="loginwrap">
    <div class="login">
        <div class="text">
            <h1>Log in 登入</h1>
        </div>
        @using (Html.BeginForm("LoginPage", "Account", FormMethod.Post))
        {
             <div class="form-floating ">
                <input asp-for="Text" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">電子郵件/使用者名稱</label>
                @Html.ValidationMessageFor(m=>m.Text,"",new{@class = "text-danger"})
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">密碼</label>
                @Html.ValidationMessageFor(m=>m.Password,"",new{@class = "text-danger"})
            </div>
            <div class="forgot">
                <i class="fi fi-rr-exclamation"></i>

                <a asp-controller="Account" asp-action="ForgotPasswordEmailPage"> 忘記密碼</a>

            </div>
            <div class="d-grid col-6 mx-auto">
                <button type="submit" class="btn btn-primary">登入</button>
            </div>

            <input type="hidden" asp-for="ReturnUrl"/>
        }
           
      
        

        <div class="register">
            <p>需要一個帳戶?</p>
            <a asp-controller="Account" asp-action="RegisterPage">點我註冊</a>
        </div>
    </div>

</div>

@section css{
    <style>
        body {
            background-color: gray;
        }

        a {
            text-decoration: none;
        }

        .loginwrap {
            width: 100%;
            height: 100vh;
            background-color: azure;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login {
            max-width: 400px;
            width: 100%;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .login .text {
            text-align: center;
            margin-bottom: 20px;
        }

        .login .form-floating {
            margin-bottom: 20px;
        }

        .login .forgot {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .login .forgot i {
            margin-right: 5px;
        }

        .login .d-grid {
            margin-bottom: 20px;
        }

        .login .register {
            text-align: center;
        }

        .login .register p {
            display: inline-block;
            margin-right: 10px;
        }

        .login .register a {
            text-decoration: none;
        }

        .login .register a:hover, .login .forgot a:hover {
            text-decoration: underline;
        }

        .login .btn-primary {
            width: 100%;
        }
    </style>
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css'>
}
