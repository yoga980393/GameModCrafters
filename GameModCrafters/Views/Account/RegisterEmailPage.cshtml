@model User
@{
    
}

<div class="forgotwrap">
    <form class="Register" asp-action="RegisterEmailPage" asp-controller="Account" method="post">
        
        <div class="text">
            <h1>Email確認</h1>
            <p>輸入您的電子郵件，以便我們向您發送重置密碼的連結。</p>
        </div>

        <div class="form-floating ">
            <input type="email" name="email" class="form-control" id="email" placeholder="name@example.com">
            <label for="email">Email address</label>
            @Html.ValidationMessageFor(m=>m.Email,"",new{@class = "text-danger"})
            
        </div>


        <button type="submit" class="btn btn-primary" id="sendemail_btn">SEND EMAIL</button>
    </form>
    
</div>

@section js{
    
    <script>
        const submitButton = document.getElementById('sendemail_btn');

        // 添加点击事件监听器
        submitButton.addEventListener('click', function (event) {
            event.preventDefault(); // 阻止表单的默认提交行为

            // 使用 SweetAlert2 弹出成功提示框
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: '你的電子郵件已傳送',
                showConfirmButton: false,
                timer: 1500
            });

            // 手动提交表单
            this.closest('form').submit();
        });
    </script>
   
}
@section css{
    
    <style>
        body {
            background-color: gray;
        }

        .forgotwrap {
            width: 100%;
            height: 100vh;
            background-color: azure;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .Register {
            max-width: 400px;
            width: 100%;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

            .Register .back {
                display: block;
                text-decoration: none;
                margin-bottom: 20px;
                color: #333;
            }

            .Register .text {
                text-align: center;
                margin-bottom: 20px;
            }

                .Register .text h1 {
                    margin-bottom: 10px;
                }

                .Register .text p {
                    margin-bottom: 20px;
                }

            .Register .form-floating {
                margin-bottom: 20px;
            }

                .Register .form-floating label {
                    font-weight: bold;
                }

                .Register .form-floating .form-control {
                    border-radius: 5px;
                }

            .Register button {
                width: 100%;
            }
    </style>
}